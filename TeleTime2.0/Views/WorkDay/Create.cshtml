@model TeleTime.Models.WorkDay

@{
    ViewBag.Title = "Create";
}

<h2>Skapa arbetsdag</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>WorkDay</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Day.Date, "Date", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("DayID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DayID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ShiftID, "ShiftID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ShiftID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ShiftID, "", new { @class = "text-danger" })
            </div>
        </div>

        @if (ViewBag.NumberOfShifts > 0)
        {
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        }
        else
        {
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="CreateDate" class="btn btn-default" disabled />
                </div>
            </div>
        }
    </div>
}

@if (ViewBag.NumberOfShifts == 0)
{
    <h3>Du har inte skapat några pass än. Gå till PASS och skapa några. :)</h3>
    <div>
        @Html.ActionLink("Skapa Pass genom att klicka här", "Index", "Shift")
    </div>
}

<br />
<br />

<div>
    @Html.ActionLink("Tillbaka till arbetsdag", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
