@model IEnumerable<TeleTime.Models.Role>

@{
    ViewBag.Title = "Index";
}

<h2>Roll</h2>

<p>
    @Html.ActionLink("Skapa ny roll", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Rollnamn:
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.RoleName)
        </td>
        <td>
            @Html.ActionLink("Ändra namn på roll", "Edit", new { id=item.ID }) |
            @*@Html.ActionLink("Detaljer om vilka som har rollen och när", "Details", new { id=item.ID }) |*@
            @Html.ActionLink("Ta bort rollen", "Delete", new { id=item.ID })
        </td>
    </tr>
}

</table>
